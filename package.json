{
  "name": "chapa-nestjs",
  "version": "1.3.1",
  "description": "Chapa SDK for NestJS",
  "author": "Fireayehu Zekarias<fireayehuzekarias@gmail.com>",
  "license": "MIT",
  "url": "https://github.com/fireayehu/chapa-nestjs#readme",
  "main": "dist/chapa-sdk/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/chapa-client/main.js\"",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fireayehu/chapa-nestjs"
  },
  "keywords": [
    "nestjs",
    "chapa",
    "chapa-nestjs",
    "payment"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.0.11"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "nanoid": "^5.1.2",
    "nanoid-dictionary": "^4.3.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@nestjs/common": "^11.0.10",
    "@nestjs/core": "^11.0.10",
    "@nestjs/platform-express": "^11.0.10",
    "@nestjs/testing": "11.0.10",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.5",
    "@types/supertest": "6.0.2",
    "jest": "29.7.0",
    "prettier": "3.5.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "supertest": "7.0.0",
    "ts-jest": "29.2.6",
    "ts-node": "10.9.2",
    "tsc-watch": "6.2.1",
    "tsconfig-paths": "4.2.0",
    "tslint": "5.20.1",
    "typescript": "5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
